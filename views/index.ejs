<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Nuzlocke Tracker</title>
</head>
<body>
    <header>
        <h1>Nuzlocke Tracker</h1>
    </header>
    <main>
        <section class="stats">
            <h2>Player Stats</h2>
            <table>
                <thead>
                    <tr>
                        <th>Player</th>
                        <th>Lives</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach(player => { %>
                    <tr>
                        <td><%= player.name %></td>
                        <td><%= player.lives %></td>
                        <td>
                            <form action="/update" method="POST">
                                <input type="hidden" name="player" value="<%= player.name %>">
                                <button class="btn decrement" type="submit" name="change" value="-1">-1</button>
                                <button class="btn increment" type="submit" name="change" value="1">+1</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>

        <section class="charts">
            <h2>Lives Overview</h2>
            <canvas id="livesChart"></canvas>
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('livesChart').getContext('2d');
        const data = {
            labels: [<% players.forEach(player => { %>'<%= player.name %>', <% }); %>],
            datasets: [{
                label: 'Lives',
                data: [<% players.forEach(player => { %><%= player.lives %>, <% }); %>],
                backgroundColor: ['#4CAF50', '#FFC107', '#F44336'],
                borderColor: '#1E1E1E',
                borderWidth: 1
            }]
        };
        const livesChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
</body>
</html>

